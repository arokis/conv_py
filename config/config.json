{
    "main"  : "python convpy.py",
    "log"   : "log/process.log",   
    "output": {
        "dir" : "result/"
        },
    "engines"   : {
        "path"  : "engines/",
        "config": "engines.json"
    },
    "scripts": {
        "path"  : "scripts/",
        "config": "scripts.json"
    },
    "conversions"   : { 
        "xslt" : {
            "extensions" : [".xsl", ".xslt"],
            "mime-type" : "text/xsl",
            "engine"  : {
                "name" : "Saxon"
                }    
            },
        "xquery" : {
            "extensions" : [ ".xq", ".xql", ".xqy", ".xquery" ],
            "mime-type" : "application/xquery",
            "engine"  : {
                "name" : "Saxon"
                }    
            }
    }
}