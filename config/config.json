{
    "name"  : "convPY",
    "author": "arokis.u@gmail.com",
    "version"   : "0.7.1",
    "main"  : "python convpy.py",
    "log"   : "log/process.log",   
    "tmp-file"  : "tmp/tmp.xml",
    "default-engines"   : "config/engines.json",
    "default-scenarios" : "config/scenarios.json",
    "default-convflow"  : "convflows/vmr2cs-nlp.json",
    "conversions"   : { 
        "xslt" : {
            "extensions" : [".xsl", ".xslt"],
            "mime-type" : "text/xsl",
            "engine"  : {
                "name" : "Saxon"
                }    
            },
        "xquery" : {
            "extensions" : [ ".xq", ".xql", ".xqy", ".xquery" ],
            "mime-type" : "application/xquery",
            "engine"  : {
                "name" : "Saxon"
                }    
            }
    }
}